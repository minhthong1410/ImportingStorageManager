<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/tvTieuDe"
        android:text="QUẢN LÝ PHIẾU NHẬP"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#f6b26b"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ibThem"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_add_box_24"/>
            <TextView
                style="@style/tvDuoiBtn"
                android:text="Thêm"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ibSua"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_edit_24"/>
            <TextView
                style="@style/tvDuoiBtn"
                android:text="Xoá"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ibXoa"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_baseline_delete_outline_24"/>
            <TextView
                style="@style/tvDuoiBtn"
                android:text="Sửa"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số phiếu"
                android:textSize="24dp"
                android:id="@+id/tvPhieuNhapSoPhieu"/>
            <EditText
                android:id="@+id/etPhieuNhapSoPhieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày lập"
                android:textSize="24dp"
                android:id="@+id/tvPhieuNhapNgayLap"/>
            <EditText
                android:id="@+id/etPhieuNhapNgayLap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kho"
                android:textSize="24dp"
                android:id="@+id/tvPhieuNhapKho"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spPhieuNhapKho"/>
        </LinearLayout>
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DANH SÁCH PHIẾU NHẬP"
        android:gravity="center"
        android:background="#7E7C7C"
        android:textSize="24dp"
        android:textColor="#fff"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/lvDsKho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>